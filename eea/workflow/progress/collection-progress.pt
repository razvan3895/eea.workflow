<html xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  tal:omit-tag=""
  i18n:domain="eea">

<div
  tal:define="
    info view/info;
    progress info/progress"
  style="width: 100%; height: 15px; border: 1px dotted #ccc; background-color: #eee">
    <div tal:attributes="style python:'float: right;; width: %s%%' % (100 - progress - 1)" tal:content="python:'%s%%' % progress" />
    <div tal:attributes="style string:width: $progress%;; height: 100%;; background-color: #BAE0BA;;"></div>
</div>
<div style="text-align: right">
  <div>50 items (17 closed - 33 open)</div>
</div>

</html>
